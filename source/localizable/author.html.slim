- title t(:author)

.text-center
  h1
    = t(:author)
  h2
    = data.settings.site_author
  h3
    = data.settings.site_author_profile
  .profile-image
    img src="/images/profile/large.jpg" alt="title-logo"
  .social-wrapper
    ul
      - data.settings.social_links.each do |name, url|
        - if url
          li
            a href="#{url}"
              i class=['fa', "fa-#{name}-square"]
